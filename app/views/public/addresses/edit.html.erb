<div class="container">
  <h5 class="title">配送先編集</h5>
  <div class="row">
    <div class="col">
      <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
        <div class="field row my-1">
          <label for="inputPostalCode" class="col-3 col-form-label">郵便番号</label>
          <div class="col-3">
            <%= f.text_field :postal_code, class:"form-control", id:'inputPostalCode' %>
          </div>
        </div>
        <div class="field row my-1">
          <label for="inputAddress" class="col-3 col-form-label">住所</label>
          <div class="col-7">
            <%= f.text_field :address, class:"form-control", id:"inputAddress" %>
          </div>
        </div>
        <div class="field row my-1">
          <label for="inputName" class="col-3 col-form-label">宛名</label>
          <div class="col-3">
            <%= f.text_field :name, class:"form-control", id:"inputName" %>
          </div>
          <div class="col-5 text-right">
            <%= f.submit "変更内容を保存", class:"btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>