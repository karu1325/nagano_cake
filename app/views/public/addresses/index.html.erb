<div class="container">
  <h5 class="title">配送先登録/一覧</h5>
  <div class="row">
    <div class="col-11">
      <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
        <div class="field row my-2">
          <label for="inputPostalCode" class="col-3 col-form-label">郵便番号(ハイフンなし)</label>
          <div class="col-3">
            <%= f.text_field :postal_code, class:'form-control', id:"inputPostalCode", placeholder:"0000000" %>
          </div>
        </div>
        <div class="field row my-2">
          <label for="inputAddress" class="col-3 col-form-label">住所</label>
          <div class="col-7">
            <%= f.text_field :address, class:'form-control', id:'inputAddress', placeholder:"東京都渋谷区代々木神園町0-0" %>
          </div>
        </div>
        <div class="field row my-2">
          <label for="inputName" class="col-3 col-form-label">宛名</label>
          <div class="col-3">
            <%= f.text_field :name, class:'form-control', id:'inputName', placeholder:"令和道子" %>
          </div>
          <div class="col-5 text-right">
            <%= f.submit"新規登録", class:"btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-9">
      <table class="table table-bordered border-brack">
        <thead>
          <tr>
            <th scope="col">郵便番号</th>
            <th scope="col">住所</th>
            <th scope="col">宛名</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(address.id), class:"btn btn-success" %>
              <%= link_to "削除する", address_path, method: :delete, class:'btn btn-danger' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>