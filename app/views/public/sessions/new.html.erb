<div class="container">
<h2>ログイン</h2>

<%= form_with model: @customer, url: customer_session_path do |f| %>
  <div class="nav">会員の方はこちらからログイン</div>
  <div class="field">
    <%= f.label 'メールアドレス' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
  </div>

  <div class="field">
    <%= f.label 'パスワード' %>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <%#<% if devise_mapping.rememberable? %>
    <%#<div class="field">
      <%= f.check_box :remember_me %>
      <%#<%= f.label :remember_me %>
    <%#</div>
  <%#<% end %>

  <div class="actions">
    <%= f.submit "ログイン", class:"btn btn-primary" %>
  </div>
<% end %>

<div class="nav">会員登録がお済みでない方</div>
<div class="link_nav">
  <%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください。
</div>
<%#<%= render "public/shared/links" %>
</div>