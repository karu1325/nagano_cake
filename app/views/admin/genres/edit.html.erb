<div class="container">
  <div class="title mx-3 my-2">ジャンル編集</div>
  <div class="row mb-5">
    <div class="col-lg-10">
      <%= form_with model:@genre, url: admin_genre_path, method: :patch do |f| %>
        <div class="field row">
          <label for="inputName", class="col-lg-2 col-form-label">ジャンル名</label>
          <div class="col-lg-3">
            <%= f.text_field :name, class:'form-control', id:'inputName' %>
          </div>
          <%= f.submit'変更を保存', class:"btn btn-success col-lg-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>