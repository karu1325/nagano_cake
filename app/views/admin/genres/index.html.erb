<div class="container">
  <div class="row">
    <div class="title">ジャンル一覧・追加</div>
  </div>

  <div class="col-md-10">
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
      <div class="field row my-3">
        <label for="inputName" class="col-2 col-form-label">ジャンル名</label>
        <div class="col-3">
          <%= f.text_field :name, class:"form-control", id:"inputName", placeholder:"ジャンル名" %>
        </div>
        <%= f.submit"新規登録", class:"btn btn-success col-2" %>
      </div>
    <% end %>

    <table class="table col-5">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to'編集する', edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
