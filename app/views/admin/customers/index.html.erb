<div class="container">
  <h5 class="title">会員一覧</h5>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead class="table-secondary">
          <tr>
            <th scope="col">会員ID</th>
            <th scope="col">氏名</th>
            <th scope="col">メールアドレス</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.full_name, admin_customer_path(customer) %></td>
              <td><%= customer.email %></td>
              <td><% if customer.is_active %>
                    <p class="text-success"><strong>有効</strong></p>
                  <% else %>
                    <p class="text-muted"><strong>退会</strong></p>
                  <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="page d-flex justify-content-center">
        <%= paginate @customers %>
      </div>
    </div>
  </div>
</div>